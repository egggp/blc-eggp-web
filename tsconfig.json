{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxtjs/axios",
      "@nuxtjs/auth-next",
      "@nuxt/types",
      "@types/express",
      "@types/passport",
      "@types/passport-local",
      "@types/passport-jwt",
      "@types/bcrypt",
      "@types/jsonwebtoken",
      "@types/jest",
      "./types/**"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
